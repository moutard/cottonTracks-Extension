{
  "manifest_version": 2,
  "name": "cottonTracks",
  "version": "0.0.1",
  "icons": {
    "16": "/media/images/cTfav_16.png",
    "48": "/media/images/cTfav_48.png",
    "128": "/media/images/cTfav_128.png"
  },
  "update_url": "http://www.cottontracks.com/application/autoupdate.xml",
  "description": "cottonTracks lets you remember easily the best of what you browse",
  "homepage_url": "http://www.cottontracks.com",
  "permissions": ["history", "tabs", "http://*/*", "https://*/*", "management"],
  "background": "background.html",
  "chrome_url_overrides" : {
    "newtab": "index.html"
  },
  "content_scripts": [
    {
      "matches": [ "http://*/*",
                   "https://www.google.com/*", "https://www.google.fr/*", "https://www.google.es/*", "https://www.google.co.uk/*",
                   "https://maps.google.com/*", "https://maps.google.fr/*", "https://maps.google.es/*", "https://maps.google.co.uk/*"
                 ],
      "css": [],
      "js": [
              "lib/class.js", "lib/jquery.min.js",
              "lib/jquery.livequery.js", "lib/underscore.min.js", "lib/parse_url.js",
              "init.js",
              "model/init.js","model/extracted_dna.js", "model/visit_item.js",
              "behavior/init.js",
              "behavior/passive/init.js", "behavior/passive/db_sync.js", "behavior/passive/parser.js",
              "config/init.js", "config/config.js",
              "behavior/passive/google_parser.js",
              "behavior/active/init.js", "behavior/active/reading_rater.js", "behavior/active/reading_rater/score.js"
              ],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
