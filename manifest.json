{
  "name": "cottonTracks",
  "version": "1.0",
  "description": "Reads your history, and shows the top ten pages you go to by typing the URL.",
  "permissions": ["history", "tabs", "http://*/*", "https://*/*", "management"],
  "background_page": "background.html",
  "chrome_url_overrides" : {
    "newtab": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://www.google.com/*", "https://www.google.fr/*", "https://www.google.es/*"],
      "css": [],
      "js": [ "lib/class.js", "lib/jquery.min.js",
              "lib/jquery.livequery.js", "lib/underscore.min.js", "lib/parse_url.js",
              "init.js",
              "model/init.js","model/extracted_dna.js", "model/visit_item.js",
              "behavior/init.js",
              "behavior/passive/init.js", "behavior/passive/db_sync.js", "behavior/passive/parser.js",
              "config/init.js", "config/config.js",
              "behavior/passive/google_parser.js",
              "behavior/active/init.js", "behavior/active/reading_rater.js", "behavior/active/reading_rater/score.js"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
