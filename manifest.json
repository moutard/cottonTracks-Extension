{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "description": "__MSG_extDesc__",
  "default_locale": "en",
  "version": "0.8.1",
  "minimum_chrome_version": "22",
  "icons": {
    "16": "/media/images/manifest/cotton_tracks_favicon_16.png",
    "48": "/media/images/manifest/cotton_tracks_favicon_48.png",
    "128": "/media/images/manifest/cotton_tracks_favicon_128.png"
  },
  "homepage_url": "http://www.cottontracks.com",
  "permissions": ["notifications", "history", "tabs", "chrome://favicon/", "http://*/*", "https://*/*"],
  "background": {"page" : "background.html", "persistent": false},
  "browser_action": {
    "default_icon": {
      "19": "media/images/browser_action/cbutton19.png",
      "38": "media/images/browser_action/cbutton38.png"
    },
    "default_title": "cottonTracks"
  },
  "content_scripts": [
    {
      "matches": [ "*://*/*"],
      "exclude_globs" : [
          "https://www.google.*/url", "https://www.google.com/analytics/web/*", "https://www.google.com/calendar/*"
        ],
      "include_globs" : ["http://*", "https://www.google.*", "https://maps.google.*",
      "https://www.youtube.*", "https://vimeo.com/*", "https://*.wikipedia.org/*"],
      "css": [],
      "js": [
              "lib/class.js", "lib/jquery-2.0.0.min.js",
              "lib/jquery.livequery.js", "lib/underscore.min.js",
              "init.js",
              "model/init.js","model/bag_of_words.js", "model/history_item_dna.js", "model/history_item.js","model/extracted_paragraph.js",
              "core/default/init.js", "core/default/messaging/messenger.js",
              "db/init.js", "db/translator.js",
              "translators/init.js", "translators/history_item_translators.js",
              "algo/init.js",
              "algo/common/init.js", "algo/common/words_extractor.js",
              "algo/common/words/init.js", "algo/common/words/black_list.js",
              "behavior/init.js", "behavior/background_client.js",
              "behavior/passive/init.js", "behavior/passive/parser.js", "behavior/passive/google_parser.js", "behavior/passive/wikipedia_parser.js", "behavior/passive/google_image_parser.js", "behavior/passive/parser_factory.js",
              "config/init.js", "config/config.js",
              "utils/init.js", "utils/url_parser.js", "utils/dom.js", "utils/exclude_corn.js", "utils/exclude_container.js",
              "behavior/active/init.js", "behavior/active/feedback_element.js", "behavior/active/reading_rater.js", "behavior/active/reading_rater/score.js"
              ],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
