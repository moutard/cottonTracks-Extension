{
  "manifest_version": 2,
  "name": "cottonTracks-IntegrationTests",
  "version": "0.0.4.71",
  "minimum_chrome_version": "22",
  "icons": {
    "16": "/media/images/cotton_tracks_favicon_16.png",
    "48": "/media/images/cotton_tracks_favicon_48.png",
    "128": "/media/images/cotton_tracks_favicon_128.png"
  },
  "description": "cottonTracks integration test.",
  "homepage_url": "http://www.cottontracks.com",
  "permissions": ["history", "tabs", "chrome://favicon/", "http://*/*", "https://*/*", "management", "topSites", "https://kippt.com/"],
  "background": {"page" : "integration_background.html", "persistent": false},
  "browser_action": {
    "default_icon": {
      "19": "media/images/browser_action/cbutton19.png",
      "38": "media/images/browser_action/cbutton38.png"
    },
    "default_title": "cottonTracks"
  },
  "content_scripts": [
    {
      "matches": [ "file://*", "*://*/*"],
      "exclude_globs" : ["https://www.google.*/url"],
      "include_globs" : ["file://*", "http://*", "https://www.google.*", "https://maps.google.*",
      "https://www.youtube.*", "https://*.wikipedia.org/*"],
      "css": [],
      "js": [
              "lib/class.js", "lib/jquery-2.0.0.min.js",
              "lib/jquery.livequery.js", "lib/underscore.min.js",
              "init.js",
              "model/init.js","model/bag_of_words.js", "model/history_item_dna.js", "model/history_item.js","model/extracted_paragraph.js", "db/init.js", "db/translator.js", "translators/init.js", "translators/history_item_translators.js",
              "algo/init.js",
              "algo/common/init.js", "algo/common/words_extractor.js",
              "algo/common/words/init.js", "algo/common/words/black_list.js",
              "behavior/init.js",
              "behavior/passive/init.js", "behavior/background_client.js", "behavior/passive/parser.js",
              "config/init.js", "config/config.js",
              "utils/init.js", "utils/url_parser.js", "utils/dom.js", "utils/exclude_container.js",
              "behavior/passive/google_parser.js", "behavior/passive/wikipedia_parser.js", "behavior/passive/google_image_parser.js", "behavior/passive/parser_factory.js",
              "behavior/active/init.js", "behavior/active/feedback_element.js", "behavior/active/reading_rater.js", "behavior/active/reading_rater/score.js",
              "core/default/init.js", "core/default/messaging/messenger.js"
              ],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com https://www.google.com/jsapi https://www.google.com/uds/ https://www.google.com/; object-src 'self'"
}
